
class Horner():

    def __init__(
        self,
        poly_degrees: int,
        poly_arr: tuple[int],
        string_func: Optional[str] = None
    ):

        assert isinstance(poly_degrees, int), "poly_degrees must be an int"
        self.poly_degrees = poly_degrees

        assert isinstance(poly_arr, tuple[int]), "poly_arr must be a tuple of ints"
        self.poly_arr = poly_arr

        if string_func is not None:
            assert isinstance(string_func, str), "string_func must be string representation of polynomial" 
        self.string_func = string_func

    